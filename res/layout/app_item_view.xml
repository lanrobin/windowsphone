<?xml version="1.0" encoding="utf-8"?>
<com.axen.launcher.wp7.ui.widget.AppItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:orientation="horizontal" >

    <ImageView android:id="@+id/id_app_image"
    android:layout_width="@dimen/app_icon_w"
    android:layout_height="@dimen/app_icon_h"/>
    
    <TextView
     android:id="@+id/id_app_name"
     android:paddingLeft="@dimen/app_icon_space"
      android:layout_gravity="center_vertical|left"
      android:gravity="center_vertical|left"
      android:textSize="@dimen/app_name_font_h"
      android:textColor="@color/black_background_text_color"
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

</com.axen.launcher.wp7.ui.widget.AppItemView>