<?xml version="1.0" encoding="utf-8"?>
<com.axen.launcher.wp7.ui.DragView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent_color"
    android:layout_width="@dimen/drag_view_w"
    android:layout_height="@dimen/drag_view_h" >

    <ImageView
        android:id="@+id/id_dragview_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical" />
    <ImageView
        android:id="@+id/id_dragview_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@color/transparent_color"
        android:src="@drawable/edit" />

    <ImageView
        android:id="@+id/id_dragview_unpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/transparent_color"
        android:src="@drawable/unpin" />

</com.axen.launcher.wp7.ui.DragView>